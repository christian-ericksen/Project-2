<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.christian.project2.DetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:background="#2a1d1d"
        android:backgroundTint="#3d2323"
        android:layout_alignParentTop="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:button="@android:drawable/btn_star"
        android:id="@+id/favorite_button"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll"
        android:layout_below="@id/name"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price"
            android:text="Name of Bar"
            android:textSize="20dp"
            android:layout_below="@id/name"
            android:gravity="center_horizontal"
            android:textColor="#080000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:layout_below="@id/name"
            android:text="69 Dank Street, Brooklyn NY 11211"
            android:textSize="17dp"
            android:gravity="center_horizontal"
            android:textColor="#9a0f0f" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/description"
            android:layout_below="@id/type"
            android:text="This bar is a great bar. Many drinks, good beer. Severe lack of females."
            android:gravity="center_horizontal"
            android:textColor="#141212" />
    </LinearLayout>


</RelativeLayout>